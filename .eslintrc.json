{
    "env": {
        "commonjs": true,
        "es2019": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": "./tsconfig.eslint.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "no-useless-constructor": "off"
    },
    "overrides": [
        {
          "files": [
            "**/*.spec.ts",
            "**/*.test.ts"
          ],
          "env": {
            "jest": true
          }
        }
      ]
}
